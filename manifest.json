{
    "manifest_version": 3,
    "name": "Reading Mode",
    "version": "1.0",
    "description": "Focus on reading by hiding distractions.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "32": "icon32.png"
      }
    },
    "permissions": ["scripting", "activeTab"],
    "background": {
      "service_worker": "background.js"
    }
  }
  